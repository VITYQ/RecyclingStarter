<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="16dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularIndicator"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center|left"
                    android:progress="60"
                    app:indicatorSize="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:trackColor="#EEE"
                    app:trackCornerRadius="8dp" />

                <TextView
                    android:id="@+id/textView_Fullness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/exo2_another"
                    android:text="100%"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView_ContainerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_another"
                android:layout_marginStart="112dp"
                android:text="Контейнер 47"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_ContainerPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:fontFamily="@font/exo2_another"
                android:text="Кабинет 6"
                android:textSize="16sp"
                android:layout_marginTop="54dp" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>